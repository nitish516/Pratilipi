<resources>

    <style name="splashScreenTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="android:activatedBackgroundIndicator">@drawable/list_item_background</item>
        <item name="android:textViewStyle">@style/RobotoTextViewStyle</item>
        <item name="android:buttonStyle">@style/RobotoButtonStyle</item>

    </style>

    <style name="RobotoTextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="RobotoButtonStyle" parent="android:Widget.Holo.Button">
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="FullscreenTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">@style/ButtonBar</item>
        <item name="metaButtonBarButtonStyle">@style/ButtonBarButton</item>
    </style>

    <!-- Backward-compatible version of ?android:attr/buttonBarStyle -->
    <style name="ButtonBar">
        <item name="android:paddingLeft">2dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingRight">2dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:background">@android:drawable/bottom_bar</item>
    </style>

    <!-- Backward-compatible version of ?android:attr/buttonBarButtonStyle -->
    <style name="ButtonBarButton" />

    <style name="actionBar" parent="@style/Theme.AppCompat.Light">
        <item name="android:actionBarStyle">@style/myactiontheme</item>
        <item name="android:actionBarTabStyle">@style/mycustomactiontab</item>
        <item name="android:actionBarTabBarStyle">@style/mycustomactiontabbar</item>
        <item name="android:actionBarTabTextStyle">@style/mytabtext</item>
    </style>

    <style name="myactiontheme" parent="@style/Widget.AppCompat.Light.ActionBar">
        <item name="android:titleTextStyle">@style/MyTheme.ActionBar.TitleTextStyle</item>
        <item name="android:background">@color/Red</item>
        <item name="android:windowActionBar">true</item>
        <item name="android:windowNoTitle">false</item>
    </style>

    <style name="MyTheme.ActionBar.TitleTextStyle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="mycustomactiontab" parent="@style/Widget.AppCompat.ActionBar.TabBar">
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/custom_action_bar_tab</item>
    </style>

    <style name="mycustomactiontabbar" parent="@style/Widget.AppCompat.ActionBar.TabBar">
        <item name="android:background">@color/Gray300</item>
        <item name="android:textColorHint">@color/Red</item>
    </style>

    <style name="mytabtext" parent="@style/Widget.AppCompat.ActionBar.TabText">
        <item name="android:textColor">@color/Gray800</item>
    </style>

    <!-- MainActivity Design Theme -->

    <style name="Theme.Mycustomstyle" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="actionBarItemBackground">@drawable/selectable_background_mycustomstyle</item>
        <item name="popupMenuStyle">@style/PopupMenu.Mycustomstyle</item>
        <item name="dropDownListViewStyle">@style/DropDownListView.Mycustomstyle</item>
        <item name="actionBarTabStyle">@style/ActionBarTabStyle.Mycustomstyle</item>
        <item name="actionDropDownStyle">@style/DropDownNav.Mycustomstyle</item>
        <item name="actionBarStyle">@style/ActionBar.Solid.Mycustomstyle</item>
        <item name="actionModeBackground">@drawable/cab_background_top_mycustomstyle</item>
        <item name="actionModeSplitBackground">@drawable/cab_background_bottom_mycustomstyle</item>
        <item name="actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Mycustomstyle</item>
        <item name="android:logo">@drawable/pratilipi_logo_vector</item>

        <!-- Light.DarkActionBar specific -->
        <item name="actionBarWidgetTheme">@style/Theme.Mycustomstyle.Widget</item>

    </style>

    <style name="ActionBar.Solid.Mycustomstyle" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="background">@drawable/ab_solid_mycustomstyle</item>
        <item name="backgroundStacked">@drawable/ab_stacked_solid_mycustomstyle</item>
        <item name="backgroundSplit">@drawable/ab_bottom_solid_mycustomstyle</item>
        <item name="progressBarStyle">@style/ProgressBar.Mycustomstyle</item>
    </style>

    <style name="ActionBar.Transparent.Mycustomstyle" parent="@style/Widget.AppCompat.ActionBar">
        <item name="background">@drawable/ab_transparent_mycustomstyle</item>
        <item name="progressBarStyle">@style/ProgressBar.Mycustomstyle</item>
    </style>

    <style name="PopupMenu.Mycustomstyle" parent="@style/Widget.AppCompat.PopupMenu">
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_mycustomstyle</item>
    </style>

    <style name="DropDownListView.Mycustomstyle" parent="@style/Widget.AppCompat.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background_mycustomstyle</item>
    </style>

    <style name="ActionBarTabStyle.Mycustomstyle" parent="@style/Widget.AppCompat.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab_mycustomstyle</item>
    </style>

    <style name="DropDownNav.Mycustomstyle" parent="@style/Widget.AppCompat.Spinner.DropDown.ActionBar">
        <item name="android:background">@drawable/spinner_background_ab_mycustomstyle</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_mycustomstyle</item>
        <item name="android:dropDownSelector">@drawable/selectable_background_mycustomstyle</item>
    </style>

    <style name="ProgressBar.Mycustomstyle" parent="@style/Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_mycustomstyle</item>
    </style>

    <style name="ActionButton.CloseMode.Mycustomstyle" parent="@style/Widget.AppCompat.ActionButton.CloseMode">
        <item name="android:background">@drawable/btn_cab_done_mycustomstyle</item>
    </style>

    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.Mycustomstyle.Widget" parent="@style/Theme.AppCompat">
        <item name="popupMenuStyle">@style/PopupMenu.Mycustomstyle</item>
        <item name="dropDownListViewStyle">@style/DropDownListView.Mycustomstyle</item>
    </style>

    <!-- Rating Bar Style-->
    <style name="CustomRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/custom_rating_bar_full</item>
        <item name="android:minHeight">23dip</item>
        <item name="android:maxHeight">23dip</item>
    </style>

    <!-- ToolBar Style Theme-->
    <style name="CustomToolBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:colorPrimary">@color/ColorPrimary</item>
        <item name="android:colorPrimaryDark">@color/ColorPrimaryDark</item>
        <item name="android:windowActionBar">true</item>
        <item name="android:windowActionBarOverlay">true</item>
    </style>

    <style name="noAnimTheme" parent="android:Theme">
        <item name="android:windowAnimationStyle">@null</item>
    </style>

</resources>
