<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/more_card_feature"
    android:layout_gravity="center"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="1dp"
    android:layout_below="@+id/textView"
    android:layout_alignParentRight="true"
    android:layout_alignParentEnd="true"
    card_view:cardUseCompatPadding="true">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="fill_horizontal">
    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/detail_image"
        android:layout_width="wrap_content"
        android:layout_margin="10dp"
        android:layout_height="match_parent"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
        <TextView
            android:id="@+id/titleTextViewMoreFeatured"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:paddingTop="10dp"
            android:paddingLeft="5dp"
            android:layout_marginRight="50dp"
            android:textSize="20dp"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                >
            <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:id="@+id/overflow_cardlist"
            android:background="@drawable/ic_more_vert_black_24dp"
                />
            </RelativeLayout>
        </RelativeLayout>
        <TextView
            android:id="@+id/authorTextViewMoreFeatured"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:padding="5dp"
            android:textSize="14dp"/>
 <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:orientation="horizontal">
            <RatingBar
                android:id="@+id/averageRatingBarFeatured"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                style="@style/CustomRatingBar"
                android:numStars="5"
                android:stepSize="0.1"
                android:isIndicator="true"
                android:layout_marginLeft="5dp"
                android:gravity="center"/>
            <TextView
                android:id="@+id/featuredPageRatingNumber"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toLeftOf="@+id/averageRatingBar" />
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/genreTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#666666"
                android:background="@drawable/custom_button_design_genre"
                android:gravity="left"
                android:text="Genre"
                android:textSize="12dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:layout_marginTop="10dp"/>
            <TextView
                android:id="@+id/averageRatingTextView"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_margin="5dp"
                android:textColor="#009245"
                android:gravity="right"
                android:padding="5dp"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
</android.support.v7.widget.CardView>