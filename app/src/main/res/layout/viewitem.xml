<card_view:android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="1dp"
    android:layout_marginRight="5dp"
    android:layout_marginLeft="5dp"
    android:id="@+id/home_card_view">

    <LinearLayout
    android:id="@+id/view_item_layout"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#EEEEEE">
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
             <com.android.volley.toolbox.NetworkImageView
                android:id="@+id/image"
                android:layout_gravity="center"
                android:layout_width="120dp"
                android:layout_height="150dp"
                android:scaleType="fitCenter"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left|top"
                android:background="#c8ffffff"
                android:layout_marginTop="115dp"
                android:paddingBottom="20dp"
                android:id="@+id/overlay_book_Title"
                android:paddingLeft="5dp"
                android:textSize="15dp"
                android:paddingTop="3dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left|top"
                android:layout_marginTop="122dp"
                android:paddingTop="20dp"
                android:id="@+id/overlay_author_name"
                android:paddingLeft="2dp" />
        </RelativeLayout>
        <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center" >

        <RatingBar
            android:id="@+id/averageRatingRatingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/CustomRatingBar"
            android:numStars="5"
            android:stepSize="0.1"
            android:isIndicator="true"
            android:paddingTop="3dp" />

        <TextView
            android:id="@+id/freeBtn"
            android:layout_toRightOf="@id/averageRatingRatingBar"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="  FREE!"
            android:textColor="@color/Teal"
            android:gravity="right"
            android:textSize="12dp"
            android:paddingTop="2dp"/>

        </RelativeLayout>

</LinearLayout>
</card_view:android.support.v7.widget.CardView>
