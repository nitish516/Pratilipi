    android:id="@+id/summaryTextView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceMedium"
   android:layout_marginTop="10dp"
        android:padding="5dp"/>
</LinearLayout>
    </ScrollView>