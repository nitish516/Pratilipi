<android.support.v4.widget.DrawerLayout
xmlns:android="http://schemas.android.com/apk/res/android"
android:id="@+id/main_layout"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".MainActivity">

<!-- As the main content view, the view below consumes the entire
     space available using match_parent in both dimensions. -->
<FrameLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingTop="25dp"
    android:paddingBottom="25dp"
    android:background="@color/White">
    <com.pratilipi.pratilipi.CustomWebView
    android:id="@+id/webView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:orientation="vertical">
        <TextView
            android:id="@+id/pageNo_indicator_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="100dp"
            android:paddingRight="100dp"
            android:layout_marginLeft="50dp"
            android:textColor="#FFFFFF"
            android:background="@drawable/page_indicator_button"
            android:visibility="gone"/>
        <SeekBar
            android:id="@+id/reader_seek_bar"
            android:layout_gravity="bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="15dp"
            android:paddingBottom="25dp"
            android:background="@color/White"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/fixed_page_indicator_text_view"/>
    </LinearLayout>
</FrameLayout>

<ListView
    android:id="@+id/right_drawer"
    android:layout_width="240dp"
    android:layout_height="match_parent"
    android:layout_gravity="right"
    android:choiceMode="singleChoice"
    android:divider="@color/button_material_dark"
    android:dividerHeight="2dp"
    android:fitsSystemWindows="true"
    android:background="#ccc"
    />

</android.support.v4.widget.DrawerLayout>